{
  "openapi": "3.0.0",
  "info": {
    "title": "SCA Authentication API",
    "version": "1.0.0",
    "description": "This API enables you to authenticate to ISPSS and receive a working token that can be used by other APIs",
    "contact": {
      "name": "SCA Group"
    }
  },
  "servers": [
    {
      "url": "https://{identity_tenant}.id.cyberark.cloud",
      "description": "Identity Base URL"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "UserPassBasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "AccessToken": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string"
          },
          "expires_in": {
            "type": "integer"
          },
          "scope": {
            "type": "string"
          }
        },
        "example": {
          "access_token": "***ACCESS TOKEN HERE***",
          "token_type": "Bearer",
          "expires_in": 900,
          "scope": "full"
        }
      }
    }
  },
  "paths": {
    "/oauth2/token/{app_id}": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Generate a public access token",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessToken"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "grant_type": {
                    "type": "string",
                    "description": "client_credentials: Refers to the Client Credentials Flow"
                  }
                },
                "required": [
                  "grant_type"
                ],
                "example": {
                  "grant_type": "client_credentials"
                }
              }
            }
          }
        },
        "security": [
          {
            "UserPassBasicAuth": []
          }
        ],
        "description": "Generate a public access token"
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "app_id",
          "in": "path",
          "required": true,
          "description": "The web application identifier"
        }
      ]
    }
  }
}